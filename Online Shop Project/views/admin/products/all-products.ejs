<%- include('../../includes/head.ejs', { title: 'All Products ( Admin View )'}) %>
<link rel="stylesheet" href="/styles/base.css">
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/products.css">
<script src="/scripts/product-management.js" defer></script>
</head>

<body>
    <%- include('../../includes/header.ejs') %>
    <main>
        <h1>All Products (Admin View)</h1>
        <a href="/admin/products/new">Add Product</a>
        <% if (!products || products.length === 0) { %>
            <p>No products found</p>
        <% } else { %>
            <ul id="products-grid-container">
                <% for (const product of products) { %>
                    <%- include('../../includes/product-item', { product: product }) %>
                <% } %>
            </ul>     
        <% } %>
    </main>
</body>
</html>

